{
    "name": "Notion Text Justify",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Justify text on Notion web pages",
    "permissions": ["activeTab"],
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://www.notion.so/*"],
            "css": ["main.css"]
        }
    ]
}
